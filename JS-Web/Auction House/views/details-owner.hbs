
        <main>

            <!-- In case of error, display the following div--><!--

            <div class="error-box">
                <p>Show each error in a separate paragraph</p>
            </div>

            -->
            
            <!-- Details Page - Auction owner -->
            <section id="catalog-section">

                <h1 class="item">
                    Fishing Boat
                    <div class="f-right">
                        <a class="action pad-small f-left" href="/browse/{{item._id}}/edit">Edit</a>
                        <a class="action pad-small f-left" href="/browse/{{item._id}}/delete">Delete</a>
                    </div>
                </h1>
                <div class="item padded">

                    <div class="layout right large">
                        
                        <div class="col">
                            <img src="{{item.imageUrl}}" class="img-large">
                        </div>

                        <div class="content pad-med">

                            <p>In category: <strong>{{item.category}}</strong></p>
                            <p>{{item.description}}</p>

                            <div class="align-center">
                                <div>
                                    Current price: $<strong>{{item.price}}</strong>
                                </div>

                                <div>
                                    <!-- If there is a bidder -->
                                    {{#if item.bidderId}}
                                    Bid by <strong>{{bidder.firstName}} {{bidder.lastName}}</strong>

                                    <!-- # Bonus: If there is a bidder -->

                                    <a class="action pad-med cta" href="/browse/{{item._id}}/close">Close Auction</a>
                                    
                                  
                                    {{else}}
                                    <!-- If there are no bids -->
                                    No bids
                                    {{/if}}
                                </div>
                            </div>

                        </div>
                    </div>

                    <footer>Listed by {{author.firstName}} {{author.lastName}}</footer>
                </div>

            </section>

        </main>

