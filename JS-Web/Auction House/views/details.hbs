<main>
        {{#if error}}
         <div class="error-box">
                <p>{{error.message}}</p>
            </div>
        {{/if}}
    <!-- In case of error, display the following div--><!--

            <div class="error-box">
                <p>Show each error in a separate paragraph</p>
            </div>

            -->

    <!-- Details Page -->
    <section id="catalog-section">

        <h1 class="item">
            {{item.title}}
        </h1>
        <div class="item padded">

            <div class="layout right large">

                <div class="col">
                    <img src="{{item.imageUrl}}" class="img-large">
                </div>

                <div class="content pad-med">

                    <p>In category: <strong>{{item.category}}</strong></p>
                    <p>{{item.description}}</p>

                    <div class="align-center">
                        <div>
                            Current price: $<strong>{{item.price}}</strong>
                        </div>
                        {{#if guest}}
                        {{else}}
                        <!-- If current user can place a bid -->
                        {{#if currentBidder}}
                        <div>
                            You are currently the <strong>highest bidder</strong> for this auction
                        </div>
                        {{else}}
                        <form class="vertical" method="post" action="/browse/{{item._id}}/bid">
                            <label><span>Bid amount</span><input type="number" name="price"></label>
                            <input class="action" type="submit" value="Place bid">
                        </form>
                            {{/if}}
                        <!-- If current user is the bidder -->

                        {{/if}}
                    </div>

                </div>
            </div>

            <footer>Listed by {{author.firstName}} {{author.lastName}}</footer>
        </div>

    </section>

</main>